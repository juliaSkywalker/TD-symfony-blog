{% extends 'base.html.twig' %}
{% block body %}


    <h1>Edition Article</h1>
    {#ouvre la balise form #}
    {{ form_start(form) }}

    {#Bloc de formulaire pour l'attribut name#}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}
    {#si mon  orignal image n'est pas nul #}
    {% if original_image is not null %}
        <p>Actuellement:
            <img src="{{ asset('images/'~ original_image) }}" height="200px" alt="">
        </p>
    {% endif %}



    <div class="text-right">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_admin_article_index') }}" class="btn btn-outline-secondary">Retour</a>
    </div>


    {#ferme la balise form #}
    {{ form_end(form) }}

{% endblock %}

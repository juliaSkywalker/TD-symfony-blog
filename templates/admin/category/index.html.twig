{% extends 'base.html.twig' %}



{% block body %}
<h1>Gestion Catégories</h1>
<p>
    <a href="{{ path('app_admin_category_edit') }}">Ajouter une Catégorie
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th width="350px"></th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td></td>
        </tr>
    {% endfor %}
</table>
    {% endblock %}
